# Unmaintained: Downstream port, only for testing. Use mainline port (huawei-kiwi)!
# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-huawei-kiwi-downstream
pkgdesc="Huawei Honor 5X (Downstream)"
pkgver=1
pkgrel=1
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="postmarketos-base linux-huawei-kiwi-downstream mkbootimg mesa-dri-gallium msm-fb-refresher"
makedepends="devicepkg-dev"
source="deviceinfo"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Modem/GPU/WiFi/BT/Video firmware"
	depends="linux-firmware-qcom firmware-huawei-kiwi firmware-qcom-adreno-a420"
	mkdir "$subpkgdir"
}

